  <script>
    function addCart(e){
      e.preventDefault();
      const btn = e.currentTarget;
      btn.textContent = 'Added ‚úì';
      btn.style.background = '#D1FAE5';
      setTimeout(()=>{btn.textContent = 'Add to Cart'; btn.style.background = ''},1200);
    }
    // Small enhancement: focus search when tapping the search area
    document.querySelector('.search').addEventListener('click', ()=> document.querySelector('.search input').focus())
